<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gloria_project" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Light mode -->
    <!-- Screen background if light mode is on -->
    <style name="SCREEN">
        <item name="android:background">#ECE1E1</item>

    </style>

    <!-- Text background if light mode is on -->
    <style name="TEXT">
        <item name="android:textColor">#0654DC</item>
    </style>

    <!-- Button background if light mode is on -->

    <style name="BUTTON">
        <item name="android:backgroundTint">#264ACC</item>
        <item name="android:textColor">#DCE2EC</item>
    </style>
</resources>